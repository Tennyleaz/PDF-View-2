<Window x:Class="PDF_View_2.PasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PDF_View_2"
        mc:Ignorable="d" WindowStartupLocation="CenterOwner" WindowStyle="ToolWindow" ResizeMode="NoResize"
        Title="PasswordWindow" Height="250" Width="400">
    <Grid>
        <Label FontSize="16" Margin="0,50,0,0" HorizontalAlignment="Center">Plz input your password:</Label>
        <PasswordBox Name="passwordBox" Width="300" Height="22" FontSize="14" VerticalContentAlignment="Center" KeyDown="PasswordBox_OnKeyDown"/>
        <StackPanel Orientation="Horizontal" Margin="0,0,0,30" HorizontalAlignment="Center" VerticalAlignment="Bottom">
            <Button Name="btnOk" Width="100" Height="32" Content="OK" Click="BtnOk_OnClick"/>
            <Button Name="btnCancel" Width="100" Height="32" Margin="50,0,0,0" Content="Cancel" Click="BtnCancel_OnClick"/>
        </StackPanel>
    </Grid>
</Window>
